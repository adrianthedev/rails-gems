<%= turbo_stream.replace "gem_cards" do %>
  <%= render partial: '/gems/gem', collection: @gems, as: :gem %>
  <div id="gem_cards"></div>
<% end %>
<%= turbo_stream.replace "load_more" do %>
  <%= render partial: "/partials/load_more", locals: { total: @gems.length, count: @gems_count, offset: @offset + @limit } %>
<% end %>