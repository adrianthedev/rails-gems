<%= turbo_frame_tag gem do %>
  <div class="col h-100">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title"><%= link_to gem.name, gem_path(gem), data: { turbo_frame: "_top" } %></h5>
        <p class="card-text"><%= gem.title %></p>
      </div>
      <div class="card-footer">
        <% if user_signed_in? %>
          <% if gem.liked? %>
            <%= button_to "Liked", unlike_gem_path(gem), method: :delete, title: "Liked", class: "float-end btn btn-block btn-sm btn-secondary" %>
          <% else %>
            <%= button_to "Like", like_gem_path(gem), method: :post, title: "Like", class: "float-end btn btn-block btn-sm btn-outline-secondary" %>
          <% end %>
        <% end %>
        <small class="text-muted"><%= pluralize(gem.likes_count, "like") %></small>
      </div>
    </div>
  </div>
<% end %>