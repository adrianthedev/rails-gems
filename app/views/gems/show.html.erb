<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Gems", gems_path %></li>
    <li class="breadcrumb-item active me-auto" aria-current="page"><%= @gem.name %></li> 
    <%= render '/partials/breadcrumb/edit', model: @gem, url: edit_gem_path(@gem) %>
  </ol>
</nav>

<div class="card mb-4">
  <div class="card-body">
    <%= tag.h1 @gem.name, class: "card-title" %>
    <%= tag.h5 @gem.title, class: "card-subtitle mb-2 text-muted" if @gem.title.present? %>
    <%= tag.p @gem.description, class: "card-text" if @gem.description.present? %>
    <%= link_to("Homepage", @gem.homepage_uri, class: "card-link") if @gem.homepage_uri.present? %>
    <%= link_to("Project", @gem.project_uri, class: "card-link") if @gem.project_uri.present? %>
    <%= link_to("Funding", @gem.funding_uri, class: "card-link") if @gem.funding_uri.present? %>
    <%= link_to("Wiki", @gem.wiki_uri, class: "card-link") if @gem.wiki_uri.present? %>
    <%= link_to("Source", @gem.source_code_uri, class: "card-link") if @gem.source_code_uri.present? %>
    <%= link_to("Documentation", @gem.documentation_uri, class: "card-link") if @gem.documentation_uri.present? %>
    <%= link_to("Bug Tracker", @gem.bug_tracker_uri, class: "card-link") if @gem.bug_tracker_uri.present? %>
    <%= link_to("Mailing List", @gem.mailing_list_uri, class: "card-link") if @gem.mailing_list_uri.present? %>
  </div>
  <div class="card-footer text-muted">
    <% @gem.authors.to_a.each do |author| %>
      <%= tag.span author, class: "badge bg-secondary" %>
    <span class="badge bg-secondary"><%= author %></span>
    <% end %>
    <% @gem.licenses.to_a.each do |license| %>
      <%= tag.span license, class: "badge bg-secondary" %>
    <% end %>
    <%= tag.span @gem.version, class: "badge bg-secondary" %>
  </div>
</div>

<%= turbo_frame_tag "users", src: gem_users_path(@gem), loading: :lazy %>