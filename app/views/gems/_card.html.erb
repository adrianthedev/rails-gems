<%= turbo_frame_tag dom_id(gem, :card) do %>
  <div class="col h-100">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title"><%= link_to gem.name, gem_path(gem), data: { turbo_frame: "_top" } %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= gem.tag_list %></h6>
        <div class="card-text"><%= gem.title.to_s.truncate(150) %></div>
      </div>
      <div class="card-footer">
        <% if user_signed_in? %>
          <% if gem.liked? %>
            <%= button_to unlike_gem_path(gem), method: :delete, title: "Liked", class: "float-end btn btn-block btn-sm btn-primary" do %>
              <%= tag.i "", class: "fas fa-heart" %>
            <% end %>
          <% else %>
            <%= button_to like_gem_path(gem), method: :post, title: "Like", class: "float-end btn btn-block btn-sm btn-outline-primary" do %>
              <%= tag.i "", class: "far fa-heart" %>
            <% end %>
          <% end %>
        <% end %>
        <%= tag.span class: "badge bg-secondary" do %>
          <%= tag.i "", class: "fas fa-heart" %>
          <%= number_to_human(gem.likes_count) %>
        <% end %>
        <%= tag.span class: "badge bg-secondary" do %>
          <%= tag.i "", class: "fas fa-download" %>
          <%= number_to_human(gem.downloads_count) %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>