<nav aria-label="search">
  <%= render '/partials/search', placeholder: "Search gems..." %>
</nav>

<%= turbo_frame_tag "gems" do %>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
    <%= render partial: '/gems/card', collection: @gems, as: :gem %>
    <div id="gem_cards"></div>
  </div>
  <%= render "/partials/load_more", count: @gems_count, offset: @offset + @limit %>
<% end %>
