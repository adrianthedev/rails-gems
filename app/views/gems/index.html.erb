<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active me-auto" aria-current="page">Gems</li>
    <%= render '/partials/breadcrumb/search' %>
  </ol>
</nav>
<%= turbo_stream_from :gems %>

<%= turbo_frame_tag :gems do %>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
    <%= render partial: 'gem', collection: @gems %>
  </div>
  <%= render partial: "/partials/load_more", locals: { total: @gems.length, count: @gems_count, offset: @offset + @limit } %>
<% end %>