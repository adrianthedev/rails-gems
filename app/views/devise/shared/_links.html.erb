<%- if controller_name != 'sessions' %>
  <%= link_to "Already have an account?", new_session_path(resource_name), class: "card-link", data: { turbo: true, turbo_frame: 'modal' } %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Don't have an account?", new_registration_path(resource_name), class: "card-link", data: { turbo: true, turbo_frame: 'modal' } %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "card-link", data: { turbo: true, turbo_frame: 'modal' } %>
<% end %>